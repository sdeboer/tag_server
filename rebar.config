% The next option is required so we can use lager.
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform}
    ]}.

{lager, [
    {handlers, [
        {lager_console_backend, debug},
        {lager_file_backend, [{file, "console.log"}, {level, debug}]},
        {lager_file_backend, [{file, "error.log"}, {level, error}]}
        ]}
    ]}.

{lib_dirs,["deps"]}.

{deps, [
    {'lager', ".*", {
        git, "git://github.com/basho/lager.git", "master"}
    },
    {'eredis', ".*", {
        git, "git://github.com/wooga/eredis.git", "master"}
    },
    {'mimetypes', ".*", {
        git, "git://github.com/spawngrid/mimetypes.git", "master"}
    },
    {'cowboy', ".*", {
        git, "git://github.com/extend/cowboy.git", "master"}
    },
    {'bullet', ".*", {
        git, "git://github.com/extend/bullet.git", "master"}
    },
    {jiffy, ".*", {
        git, "git://github.com/davisp/jiffy.git", "HEAD"}
    },
    {'uuid', ".*", {
        git, "git://github.com/avtobiff/erlang-uuid.git", "master"}
    }
    ]}.
